<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="300" prefWidth="400" style="-fx-font-family: 'Arial';" xmlns="http://javafx.com/javafx/14" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.watertall.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="15" BorderPane.alignment="CENTER">
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Login" />
            <TextField fx:id="emailField" maxWidth="250" promptText="E-mailadres" style="-fx-background-radius: 10; -fx-padding: 10;" />
            <PasswordField fx:id="passwordField" maxWidth="250" promptText="Wachtwoord" style="-fx-background-radius: 10; -fx-padding: 10;" />
            <Button maxWidth="250" onAction="#handleLogin" style="-fx-font-size: 18px; -fx-background-color: #808000; -fx-text-fill: white; -fx-background-radius: 8px;" text="Login" />
            <Label fx:id="errorLabel" style="-fx-text-fill: red;" text="" />

            <!-- Toegevoegde knop voor registratie -->
            <Button maxWidth="250" onAction="#handleRegisterRedirect" style="-fx-font-size: 14px; -fx-text-fill: #808000; -fx-background-color: transparent;" text="Registreer als je nog geen account hebt" />
        </VBox>
    </center>
</BorderPane>
